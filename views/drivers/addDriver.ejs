<% include ../layout/header.ejs %>

<div class="container">


<% if(msg != ""){ %>
    <div class="alert <% if(msg[0] == 'Done'){ %>alert-success<% }else{ %> alert-danger<% } %> " role="alert">
        <%= msg  %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
<% } %>

<div class="col-md-12 text-center">
  <img src="/images/driver.jpg" width="20%" class="img-fluid" alt="Responsive image">
</div>

<form action="" method="post" enctype="">
  <div class="form-row">

      <%# firstname %>
    <div class="col-md-4 mb-3">
      <label>First name</label>
      <input name="firstname" type="text" class="form-control" value="" required>
    </div>

    <%# lastname %>
    <div class="col-md-4 mb-3">
      <label>Last name</label>
      <input name="lastname" type="text" class="form-control" value="" required>
    </div>


    <%# username %>
    <div class="col-md-4 mb-3">
      <label>Username</label>
      <div class="input-group">
        <div class="input-group-prepend">
          <span class="input-group-text">@</span>
        </div>
        <input name="username" type="text" class="form-control" aria-describedby="inputGroupPrepend3" required>
      </div>
    </div>
  </div>


  <%# email %>
  <div class="form-row">
    <div class="col-md-6 mb-3">
      <label>Email <i class="fa fa-envelope" aria-hidden="true"></i></label>
      <input name="email" type="email" class="form-control" required>
    </div>

    <%# mobileNumber %>
      <div class="col-md-6 mb-3">
        <label>Mobile Number <i class="fa fa-mobile" aria-hidden="true"></i></label>
        <input name="mobileNumber" type="text" class="form-control" required>
      </div>
    </div>

    <!-- Associated car -->
    <div class="form-row">
      <div class="col-md-4 mb-3">
        <label>Associated car</label>
        <select id="car" name="car" class="form-control">
          <% cars.forEach((car)=>{ %>
            <option value="<%= car.model %>"><%= car.model %></option>
          <% }); %>
        </select>
      </div>
    </div>

    <div class="text-center mb-3">
      <button class="btn btn-lg btn-dark" type="submit">Add Driver</button>
    </div>

  </div>

</form>

<% include ../layout/footer.ejs %>
